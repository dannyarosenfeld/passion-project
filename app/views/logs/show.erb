  </div>
<div class="containerthing">


    <img src="<%= @log.user.image %>" alt="user image" width="150" height="150">
     <p id="username"><%= @log.user.username %></p>
     <a href="/logs/<%=@log.id %>"><%= @log.title %></a>
    <p> <%= @log.likes.count %> people favorited this workout log</p>




    <p> <%= @log.duration %> </p>
    <p id="paragraph"> <%= @log.location %> </p>
    <p id="created"><%= @log.created_at.strftime("%d %b. %Y") %></p>



      <% i = 0 %>
  <%@log.workouts.each do |workout|  %>

    <% i += 1 %>
    <strong id="num"> <%=i%> </strong>


    <strong> <%=workout.name%> </strong>
    <strong>sets: <%=workout.sets%> </strong>
    <strong>reps: <%=workout.reps%> </strong>
    <strong> <%=workout.time_since_creation%> </strong>
    </br></br>

  <% end %>


